<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.musicapp">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WAKE_LOCK"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>




    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".AlbumActivity"
            android:label="Album"
            android:parentActivityName=".MainActivity"/>
        <activity android:name=".ArtistActivity"
            android:label="Artist"
            android:parentActivityName=".MainActivity"/>
        <activity android:name=".PlaylistActivity"
            android:label="PlayList"
            android:parentActivityName=".MainActivity"/>
        <activity android:name=".TracksActivity"
            android:label="Tracks"
            android:parentActivityName=".MainActivity"/>
        <activity android:name=".TrackView"
            android:parentActivityName=".MainActivity"/>
        <activity android:name=".AlbumView"
            android:parentActivityName=".MainActivity"/>
        <activity android:name=".AlbumClassView"
            android:parentActivityName=".MainActivity"/>
    </application>

</manifest>